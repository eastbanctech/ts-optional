{
  "name": "@eastbanctech/ts-optional",
  "version": "1.0.2",
  "description": "TS adapted Java Optional class with extra utility classes.",
  "keywords": [
    "typescript",
    "typescript-library",
    "monads",
    "functional",
    "optional"
  ],
  "main": "dist/ts-optional.umd.js",
  "module": "dist/ts-optional.es5.js",
  "typings": "dist/types/ts-optional.d.ts",
  "files": [
    "dist"
  ],
  "author": "ILya Turukin <tr.wolfer@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/eastbanctech/ts-optional"
  },
  "homepage": "https://eastbanctech.github.io/ts-optional",
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "generate-docs": "typedoc --out docs --target es6 --theme default --mode file src",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "ts-optional.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^10.17.43",
    "jest": "^26.6.1",
    "jest-config": "^26.6.1",
    "lint-staged": "^8.0.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.14.3",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.0",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.27.3",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.4.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "0.17.3",
    "typescript": "^3.9.7"
  }
}
